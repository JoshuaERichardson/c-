<h1>Add a Dish!</h1>
<p><a href="/">Home</a></p>
@model Dish
<form asp-action="ProcessNewDish" asp-controller="Home" method="POST">
    <label asp-for="DishName"></label>
        <input asp-for="DishName">
        <span asp-validation-for="DishName"></span>
    <label asp-for="Calories"></label>
        <input asp-for="Calories">
        <span asp-validation-for="Calories"></span>
    <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness"></span>
    <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    <label asp-for="ChefId"></label>
        <select asp-for="ChefId">
            @foreach(Chef chef in ViewBag.AllChefs)
            {
                <option value=@chef.ChefId>@chef.FirstName @chef.LastName </option>
            }
        </select>
        
        <span asp-validation-for="ChefId"></span>
    <input type="submit" value="Add Dish">
</form>

<div asp-validation-summary="All">

</div>