@model User

<div class="container">

    <form style="width: 470px; padding: 25px; margin:  auto; border: 2px solid black" asp-controller="Home" asp-action="Index" method="post">
        <h3>Sign up!</h3>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">

            <label class="col-md-6 col-form-label" for="first_name">First Name: </label>
          

                <input class="form-control col-md-6" id="first_name" type="text" name="first_name" />
                <label class="col-md-6 col-form-label"></label>
              <span asp-validation-for="first_name" class="text-danger"></span>
          

        </div>
        <div class="form-group row">

            <label class="col-md-6 col-form-label" for="last_name">Last Name: </label>
            <input class="form-control col-md-6" id="last_name" type="text" name="last_name" />
            <label class="col-md-6 col-form-label" for="first_name"> </label>
            <span asp-validation-for="last_name"  class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="email">Email: </label>
            <input class="form-control col-md-6" id="email" type="text" name="email" />
            <label class="col-md-6 col-form-label" ></label>
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="password">Password: </label>
            <input  class="form-control col-md-6" id="password" type="password" name="password" />
            <label class="col-md-6 col-form-label"></label>
            <span asp-validation-for="password"   class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="password2">Verify Password: </label>

            <input password class="form-control col-md-6" id="password2" type="password" name="password2" />
            <label class="col-md-6 col-form-label"></label>
            <span asp-validation-for="password2"  class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label"></label>
            <input class="form-control col-md-6 btn btn-primary" type="submit" value="Register"/>
        </div>
    </form>
</div>
<div class="text-center m-3">
    <form asp-action="Login" method="get">
        <p>Already have a Login? Go to <input type="submit" value="login" /></p>
    </form>
</div>