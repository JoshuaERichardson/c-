@model LoginUser

<div class="container">

    <form style="width: 470px; padding: 25px; margin:  auto; border: 2px solid black" asp-controller="Home" asp-action="Login" method="post">
        <h3>Log in</h3>
        <div asp-validation-summary="ModelOnly"></div>
       

 
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="email">Email: </label>
            <input class="form-control col-md-6" id="email" type="text" name="email" />
            <label class="col-md-6 col-form-label" ></label>
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-md-6 col-form-label" for="password">Password: </label>
            <input class="form-control col-md-6" id="password" type="text" name="password" />
            <label class="col-md-6 col-form-label"></label>
            <span asp-validation-for="password"   class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-md-6 col-form-label"></label>
            <input class="form-control col-md-6 btn btn-primary" type="submit" value="Login"/>
        </div>
    </form>
</div>
<div class="text-center m-3">
    <form asp-action="Index" method="get">
        <p>Not Registered? Go to <input type="submit" value="Register" /></p>
    </form>
</div>