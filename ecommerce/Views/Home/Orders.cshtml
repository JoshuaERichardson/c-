<div class="toolbar">
    <p>
        <a href="/">Dashboard | </a>
        <a href="/products">Products | </a>
        <span>Orders | </span>
        <a href="/customers">Customers | </a>
        <a href="/settings">Settings</a>
    </p>
</div>

@model Order
<form asp-action="processNewOrder" asp-controller="home" method="post">
    <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId">
            @foreach(var customer in @ViewBag.AllCustomers)
            {
            <option value="@customer.CustomerId">@customer.Name</option>
            }
        </select>
        <span asp-validation-for="CustomerId"></span>


    <label asp-for="ProductId"></label>
        <select asp-for="ProductId">
        @foreach(var product in @ViewBag.AllProducts)
        {
            <option value="@product.ProductId">@product.Name</option>
        }
        </select>
        <span asp-validation-for="ProductId"></span>


    <label asp-for="QuantityOrdered"></label>
        <input asp-for="QuantityOrdered">
        <span asp-validation-for="QuantityOrdered"></span>


    <input type="submit" value="order">
</form>

<table>
    <tr>
        <th>Customer Name</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Date</th>
    </tr>
    @foreach(var order in @ViewBag.AllOrders)
    {
        <tr>
            <td>
                @order.Customer.Name
            </td>
            <td>@order.Product.Name</td>
            <td>@order.QuantityOrdered</td>
            <td>@order.CreatedAt</td>
        </tr>
    }
</table>
