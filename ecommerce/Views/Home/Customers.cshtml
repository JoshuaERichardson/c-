<div class="toolbar">
    <p>
        <a href="/">Dashboard | </a>
        <a href="/products">Products | </a>
        <a href="/orders">Orders | </a>
        <span>Customers | </span>
        <a href="/settings">Settings</a>
    </p>
</div>

@model Customer
<h3>Add a new Customer</h3>
<form asp-action="ProcessNewCustomer" asp-Controller="home" method="post">
     <label asp-for="Name"></label>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
    <input type="submit" value="Add">
</form>

<table>
    <tr>
        <th>Customer Name</th>
        <th>Created Date</th>
        <th>Actions</th>
    </tr>
    @foreach(var customer in @ViewBag.AllCustomers)
    {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.CreatedAt</td>
            <td><a href="/processRemoveCustomer/@customer.CustomerId">Remove</a></td>
        </tr>
    }
</table>